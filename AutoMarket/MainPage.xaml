<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AutoMarket.Models"
             xmlns:res="clr-namespace:AutoMarket.Resources.Strings"
             xmlns:helpers="clr-namespace:AutoMarket.Helpers"
             x:Class="AutoMarket.MainPage"
             Title="{helpers:Translate PageTitleMain}"
             BackgroundColor="#F4F4F4">

    <CollectionView ItemsSource="{Binding Cars}"
                    SelectionMode="None"
                    Margin="0">

        <CollectionView.Header>
            <VerticalStackLayout Spacing="15" BackgroundColor="White" Padding="15">

                <Grid ColumnDefinitions="*,*,*,Auto" HeightRequest="40" Padding="2" BackgroundColor="#E5E5E5" x:Name="VehicleTypeGrid">

                    <Button Text="{helpers:Translate ConditionAll}"
                        BackgroundColor="{Binding AllButtonBg}" 
                        TextColor="{Binding AllButtonText}"
                        CornerRadius="4" FontSize="14" Padding="5" BorderWidth="0" 
                        Command="{Binding SelectConditionCommand}"
                        CommandParameter="Всі"/>

                    <Button Text="{helpers:Translate ConditionUsed}"
                    BackgroundColor="{Binding UsedButtonBg}" 
                    TextColor="{Binding UsedButtonText}"
                    CornerRadius="4" FontSize="14" Padding="5" Grid.Column="1" BorderWidth="0" 
                    Command="{Binding SelectConditionCommand}"
                    CommandParameter="Вживані"/>

                    <Button Text="{helpers:Translate ConditionNew}"
                    BackgroundColor="{Binding NewButtonBg}" 
                    TextColor="{Binding NewButtonText}"
                    CornerRadius="4" FontSize="14" Padding="5" Grid.Column="2" BorderWidth="0" 
                    Command="{Binding SelectConditionCommand}"
                    CommandParameter="Нові"/>
                </Grid>

                <VerticalStackLayout Spacing="10">

                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenVehicleTypeFilterCommand}"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="{Binding VehicleTypeFilterText}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                            <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">

                        <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenMakeFilterCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{Binding MakeFilterText}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenModelFilterCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{Binding ModelFilterText}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenYearFilterCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{helpers:Translate FilterYear}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                            </Grid>
                        </Border>

                        <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8" Grid.Column="1">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenPriceFilterCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{helpers:Translate FilterPrice}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenRegionFilterCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{helpers:Translate FilterRegion}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                            </Grid>
                        </Border>

                        <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8" Grid.Column="1">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenFuelFilterCommand}"/>
                            </Border.GestureRecognizers>
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{Binding FuelFilterText}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                                <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border Stroke="#E0E0E0" StrokeThickness="1" BackgroundColor="#FAFAFA" Padding="15" StrokeShape="RoundRectangle 8">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenTransmissionFilterCommand}"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="{Binding TransmissionFilterText}" TextColor="Black" FontSize="16" VerticalOptions="Center"/>
                            <Label Text=">" TextColor="#999" FontSize="16" VerticalOptions="Center" Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <Button Text="{helpers:Translate SearchButtonText}"
                            BackgroundColor="#E63946" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            FontSize="16" 
                            HeightRequest="50" 
                            CornerRadius="8" 
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,10"/>

                <Label Text="{helpers:Translate HotOffersLabel}"
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="Black"/>

            </VerticalStackLayout>
        </CollectionView.Header>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border StrokeThickness="0" 
                        BackgroundColor="White" 
                        Padding="0" 
                        Margin="10,0,10,15"
                        StrokeShape="RoundRectangle 10">
                    <Grid RowDefinitions="Auto, Auto">

                        <Grid Grid.Row="0" HeightRequest="260">

                            <Image Source="{Binding ImageUrl}" 
                                   Aspect="AspectFill"/>
                            <BoxView BackgroundColor="#000" Opacity="0.3">
                                <BoxView.Background>
                                    <LinearGradientBrush EndPoint="0,1">
                                        <GradientStop Color="Black" Offset="0.0" />
                                        <GradientStop Color="Transparent" Offset="0.5" />
                                    </LinearGradientBrush>
                                </BoxView.Background>
                            </BoxView>

                            <Grid Padding="10" VerticalOptions="Start" HorizontalOptions="Fill">
                                <Border StrokeThickness="0" BackgroundColor="#3A8EED" Padding="8,4" HorizontalOptions="Start" StrokeShape="RoundRectangle 5">
                                    <Label Text="{helpers:Translate ListingVerifiedVin}" TextColor="White" FontSize="11" FontAttributes="Bold"/>
                                </Border>
                            </Grid>

                            <Border BackgroundColor="#7FFFFFFF" 
                                    HeightRequest="40" 
                                    WidthRequest="40" 
                                    StrokeShape="RoundRectangle 20"
                                    HorizontalOptions="End"
                                    VerticalOptions="End"
                                    Margin="15">
                                <Label Text="❤️" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Border>
                        </Grid>

                        <VerticalStackLayout Grid.Row="1" Padding="15" Spacing="10">

                            <Label Text="{Binding Title}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   TextColor="Black"/>

                            <HorizontalStackLayout Spacing="8">
                                <Label Text="{Binding PriceUSD, StringFormat='{0:N0} $'}" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       TextColor="#188c0f"/>
                                <Label Text="{Binding PriceUAH, StringFormat='{0:N0} грн'}" 
                                       FontSize="15" 
                                       TextColor="#555" 
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="10" Margin="0,5,0,0">

                                <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="4">
                                    <Label Text="{Binding Mileage, StringFormat='🚗 {0:N0}'}" TextColor="#333" FontSize="14"/>
                                    <Label Text="{helpers:Translate ListingMileageUnit}" TextColor="#333" FontSize="14"/>
                                </HorizontalStackLayout>
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding FuelType, StringFormat='⛽ {0}'}" TextColor="#333" FontSize="14"/>

                                <Label Grid.Row="1" Grid.Column="0" Text="{Binding Location, StringFormat='📍 {0}'}" TextColor="#333" FontSize="14"/>
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Transmission, StringFormat='⚙️ {0}'}" TextColor="#333" FontSize="14"/>

                            </Grid>

                            <Label Text="{Binding PostedDate}" 
                                   TextColor="Gray" 
                                   FontSize="12" 
                                   HorizontalOptions="Start"
                                   Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>