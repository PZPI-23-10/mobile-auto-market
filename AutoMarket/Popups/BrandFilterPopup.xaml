<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AutoMarket.BrandFilterPopup"
             Color="Transparent">
    <VerticalStackLayout VerticalOptions="End">

        <Border x:Name="MainBorder"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20,20,0,0"
                BackgroundColor="White"
                Padding="20"
                HorizontalOptions="Fill">
            <Grid RowDefinitions="Auto, Auto, *, Auto" RowSpacing="15">

                <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                    <Label Text="Марка, Модель"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button Grid.Column="1"
                            Text="X"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#EEE"
                            TextColor="#555"
                            Clicked="OnCloseButtonClicked"/>
                </Grid>

                <Border Grid.Row="1"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="#FAFAFA"
                        Padding="10"
                        StrokeShape="RoundRectangle 8">
                                <Entry x:Name="BrandSearchEntry" 
                           Placeholder="Пошук марки"
                           PlaceholderColor="#AAA"
                           TextColor="Black"
                           BackgroundColor="Transparent"
                           TextChanged="OnBrandSearchTextChanged"/>     
                </Border>

                <ScrollView Grid.Row="2" Margin="0,10,0,0">
                    <VerticalStackLayout x:Name="BrandListLayout" Spacing="10">
                        <Label Text="ТОП марки" FontSize="16" FontAttributes="Bold" TextColor="Black"/>

                        <Label Text="Audi" FontSize="18" Padding="10"/>
                        <Label Text="BMW" FontSize="18" Padding="10"/>
                        <Label Text="Mercedes-Benz" FontSize="18" Padding="10"/>
                        <Label Text="Toyota" FontSize="18" Padding="10"/>
                        <Label Text="Volkswagen" FontSize="18" Padding="10"/>
                        <Label Text="Lexus" FontSize="18" Padding="10"/>
                        <Label Text="Honda" FontSize="18" Padding="10"/>
                        <Label Text="Skoda" FontSize="18" Padding="10"/>
                    </VerticalStackLayout>
                </ScrollView>

                <Button Grid.Row="3"
                        Text="Застосувати"
                        BackgroundColor="#E63946"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        VerticalOptions="End"/>

            </Grid>
        </Border>
    </VerticalStackLayout>
</toolkit:Popup>