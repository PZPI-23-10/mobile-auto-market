<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AutoMarket.FuelFilterPopup"
             Color="Transparent">

    <VerticalStackLayout VerticalOptions="End">
        <Border x:Name="MainBorder" StrokeShape="RoundRectangle 20,20,0,0" BackgroundColor="White" Padding="20" HorizontalOptions="Fill">
            <Grid RowDefinitions="Auto, *, Auto" RowSpacing="15">

                <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                    <Label Text="Пальне" FontSize="20" FontAttributes="Bold"/>
                    <Button Grid.Column="1" Text="X" Clicked="OnCloseButtonClicked" Style="{StaticResource CloseButton}"/>
                </Grid>

                <ScrollView Grid.Row="1" Margin="0,10">
                    <CollectionView ItemsSource="{Binding FuelTypes}" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding}" FontSize="18" Padding="10, 15"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>

                <Button Grid.Row="2" Text="Скинути фільтр" Clicked="OnClearClicked" TextColor="#E63946" BackgroundColor="Transparent" HorizontalOptions="Center"/>
            </Grid>
        </Border>
    </VerticalStackLayout>

    <toolkit:Popup.Resources>
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="WidthRequest" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BackgroundColor" Value="#EEE"/>
            <Setter Property="TextColor" Value="#555"/>
        </Style>
    </toolkit:Popup.Resources>
</toolkit:Popup>