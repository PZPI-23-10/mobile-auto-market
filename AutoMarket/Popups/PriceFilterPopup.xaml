<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AutoMarket.Popups.PriceFilterPopup"
               Color="Transparent">

    <Border x:Name="MainBorder" 
            BackgroundColor="White" 
            StrokeShape="RoundRectangle 20,20,0,0"
            VerticalOptions="End" 
            HorizontalOptions="Fill">

        <Grid RowDefinitions="Auto, Auto, Auto, Auto" Padding="20" RowSpacing="20">

            <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                <Label Text="Вартість" TextColor="Black" FontSize="20" FontAttributes="Bold" VerticalOptions="Center"/>
                <Button Grid.Column="1" Text="X" TextColor="Black" BackgroundColor="Transparent" Clicked="OnCloseClicked"/>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="*, *" ColumnSpacing="15">
                <Border Grid.Column="0" Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 8" HeightRequest="50" Padding="10,0">
                    <Entry x:Name="EntryFrom" 
                           Placeholder="Від" 
                           Keyboard="Numeric" 
                           TextColor="Black" 
                           PlaceholderColor="#999999"/>
                </Border>

                <Border Grid.Column="1" Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 8" HeightRequest="50" Padding="10,0">
                    <Entry x:Name="EntryTo" 
                           Placeholder="До" 
                           Keyboard="Numeric" 
                           TextColor="Black" 
                           PlaceholderColor="#999999"/>
                </Border>
            </Grid>

            <HorizontalStackLayout Grid.Row="2" Spacing="15" HorizontalOptions="Start">

                <Border x:Name="BtnUsd" StrokeShape="RoundRectangle 25" HeightRequest="50" WidthRequest="50" StrokeThickness="1" BackgroundColor="#333333">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCurrencySelected" CommandParameter="USD"/>
                    </Border.GestureRecognizers>
                    <Label Text="$" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>
                </Border>

                <Border x:Name="BtnEur" StrokeShape="RoundRectangle 25" HeightRequest="50" WidthRequest="50" StrokeThickness="1" BackgroundColor="White" Stroke="#E0E0E0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCurrencySelected" CommandParameter="EUR"/>
                    </Border.GestureRecognizers>
                    <Label Text="€" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>

                <Border x:Name="BtnUah" StrokeShape="RoundRectangle 25" HeightRequest="50" WidthRequest="60" StrokeThickness="1" BackgroundColor="White" Stroke="#E0E0E0">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCurrencySelected" CommandParameter="UAH"/>
                    </Border.GestureRecognizers>
                    <Label Text="грн" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Border>

            </HorizontalStackLayout>

            <Button Grid.Row="3" 
                    Text="Застосувати" 
                    BackgroundColor="#E53935" 
                    TextColor="White" 
                    CornerRadius="10" 
                    HeightRequest="50" 
                    FontAttributes="Bold"
                    Clicked="OnApplyClicked"/>
        </Grid>
    </Border>
</toolkit:Popup>