<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AutoMarket.RegionFilterPopup"
             Color="Transparent">

    <VerticalStackLayout VerticalOptions="Fill" HorizontalOptions="Fill">

        <Border x:Name="MainBorder"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20,20,0,0"
                BackgroundColor="White"
                Padding="20"
                HorizontalOptions="Fill"
                VerticalOptions="Fill">

            <Grid RowDefinitions="Auto, Auto, *, Auto" RowSpacing="15">

                <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                    <Label Text="Регіон"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="X"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#EEE"
                            TextColor="#555"
                            Clicked="OnCloseButtonClicked"/>
                </Grid>

                <Border Grid.Row="1"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        BackgroundColor="#FAFAFA"
                        Padding="10"
                        StrokeShape="RoundRectangle 8">
                    <Entry x:Name="RegionSearchEntry"
                           Placeholder="Пошук"
                           PlaceholderColor="#AAA"
                           TextColor="Black"
                           BackgroundColor="Transparent"
                           TextChanged="OnRegionSearchTextChanged"/>
                </Border>

                <ScrollView Grid.Row="2" Margin="0,10,0,0">

                    <VerticalStackLayout x:Name="RegionListLayout" Spacing="10">

                        <Label Text="Північ" FontSize="18" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,5"/>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Київська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Житомирська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Сумська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Чернігівська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <Label Text="Центр" FontSize="18" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,5"/>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Вінницька обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Кіровоградська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Полтавська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Черкаська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <Label Text="Захід" FontSize="18" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,5"/>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Волинська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Закарпатська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Івано-Франківська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Львівська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Рівненська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Тернопільська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Хмельницька обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Чернівецька обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <Label Text="Схід" FontSize="18" FontAttributes="Bold" TextColor="Black" Margin="0,10,0,5"/>
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Дніпропетровська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Донецька обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Запорізька обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <CheckBox/>
                                <Label Text="Харківська обл." FontSize="16" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </ScrollView>

                <Button Grid.Row="3"
                        Text="Застосувати"
                        BackgroundColor="#E63946"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        VerticalOptions="End"/>

            </Grid>
        </Border>
    </VerticalStackLayout>
</toolkit:Popup>