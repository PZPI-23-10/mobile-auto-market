<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AutoMarket.YearFilterPopup"
             Color="Transparent">

    <VerticalStackLayout VerticalOptions="Fill" HorizontalOptions="Fill">

        <Border x:Name="MainBorder"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20,20,0,0" BackgroundColor="White"
                Padding="20"
                HorizontalOptions="Fill">

            <Grid RowDefinitions="Auto, Auto, *, Auto" RowSpacing="15">

                <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                    <Label Text="Рік випуску"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="X"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            WidthRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#EEE"
                            TextColor="#555"
                            Clicked="OnCloseButtonClicked"/>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,*">
                    <Label Grid.Column="0" Text="Від" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="До" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center"/>
                </Grid>

                <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">

                    <ScrollView Grid.Column="0">
                        <VerticalStackLayout x:Name="FromYearList" Spacing="10" HorizontalOptions="Center"/>
                    </ScrollView>

                    <ScrollView Grid.Column="1">
                        <VerticalStackLayout x:Name="ToYearList" Spacing="10" HorizontalOptions="Center"/>
                    </ScrollView>

                </Grid>

                <Button Grid.Row="3"
                        Text="Застосувати"
                        BackgroundColor="#E63946"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        VerticalOptions="End"/>

            </Grid>
        </Border>
    </VerticalStackLayout>
</toolkit:Popup>