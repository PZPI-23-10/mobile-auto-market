<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoMarket.ConfirmationPage"
             Title=""
             BackgroundColor="#121212">
    
    <ContentPage.Resources>
        <Style x:Key="CodeBoxStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Keyboard" Value="Numeric"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="HeightRequest" Value="60"/>
            <Setter Property="WidthRequest" Value="50"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="25,100" >

            <Label x:Name="TitleLabel"
                   Text="Підтвердження"
                   TextColor="White"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,0"/>

            <Label x:Name="InstructionsLabel"
                   Text="Введіть код, відправлений на пошту"
                   TextColor="Gray"
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>

            <Label x:Name="EmailLabel"
                   Text="example@mail.com"
                   TextColor="White"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,15"/>

            <HorizontalStackLayout x:Name="CodeEntryContainer" Spacing="10" HorizontalOptions="Center">

                <Border Stroke="#555555" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10">
                    <Entry x:Name="CodeEntry1" AutomationId="CodeEntry1" Style="{StaticResource CodeBoxStyle}" TextChanged="OnCodeEntryTextChanged"/>
                </Border>
                <Border Stroke="#555555" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10">
                    <Entry x:Name="CodeEntry2" AutomationId="CodeEntry2" Style="{StaticResource CodeBoxStyle}" TextChanged="OnCodeEntryTextChanged"/>
                </Border>
                <Border Stroke="#555555" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10">
                    <Entry x:Name="CodeEntry3" AutomationId="CodeEntry3" Style="{StaticResource CodeBoxStyle}" TextChanged="OnCodeEntryTextChanged"/>
                </Border>
                <Border Stroke="#555555" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10">
                    <Entry x:Name="CodeEntry4" AutomationId="CodeEntry4" Style="{StaticResource CodeBoxStyle}" TextChanged="OnCodeEntryTextChanged"/>
                </Border>
                <Border Stroke="#555555" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10">
                    <Entry x:Name="CodeEntry5" AutomationId="CodeEntry5" Style="{StaticResource CodeBoxStyle}" TextChanged="OnCodeEntryTextChanged"/>
                </Border>
                <Border Stroke="#555555" StrokeThickness="1" StrokeShape="RoundRectangle 10,10,10,10">
                    <Entry x:Name="CodeEntry6" AutomationId="CodeEntry6" Style="{StaticResource CodeBoxStyle}" TextChanged="OnCodeEntryTextChanged"/>
                </Border>

            </HorizontalStackLayout>

            <Label Text="Не отримали код?"
                   TextColor="White"
                   HorizontalOptions="Center"
                   TextDecorations="Underline"
                   Margin="0,20,0,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnResendCodeTapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>